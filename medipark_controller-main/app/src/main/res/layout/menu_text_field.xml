<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_margin="1dp">
    <TextView
        android:id="@+id/mode_text_field"
        android:layout_width="132dp"
        android:layout_height="55dp"
        android:background="#D3D3D3"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/memo_text_field"
        android:layout_width="422dp"
        android:layout_height="55dp"
        android:background="#D3D3D3"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/black"
        android:inputType="textVisiblePassword|textNoSuggestions"
        />
    <TextView
        android:id="@+id/energy_text_field"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:background="#D3D3D3"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/frequency_text_field"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:background="#D3D3D3"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/pulse_width_text_field"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:background="#D3D3D3"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/black" />

</LinearLayout>
