<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_margin="8dp"
    android:layout_marginTop="0dp">
    <TextView
        android:id="@+id/mode_text_field"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:textSize="25dp"
        android:text="mode"
        android:gravity="center"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/white"
        android:layout_margin="1dp"/>
    <TextView
        android:id="@+id/memo_text_field"
        android:layout_width="422dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:textSize="25dp"
        android:text="memo"
        android:gravity="center_vertical"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/white"
        android:layout_margin="1dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/energy_text_field"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:textSize="25dp"
        android:text="energy"
        android:gravity="center"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/white"
        android:layout_margin="1dp"/>
    <TextView
        android:id="@+id/frequency_text_field"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:textSize="25dp"
        android:text="frequency"
        android:gravity="center"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/white"
        android:layout_margin="1dp"/>
    <TextView
        android:id="@+id/pulse_width_text_field"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:textSize="25dp"
        android:text="pulse width"
        android:gravity="center"
        android:fontFamily="@font/marking_font"
        android:textColor="@color/white"
        android:layout_margin="1dp"/>

</LinearLayout>
